<html>
<head>
    <title>To Do List</title>
</head>
<body>
    <h1>{{ found_category.getName }}</h1>

    {% if tasks is not empty %}
        <p>Here are the tasks:</p>
        <ul>
            {% for task in tasks %}
                <li>{{ task.getDescription }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h4>Add a task</h4>

    <form action='/categories/{{ category.getId }}' method='post'>
      <label for="description">Add a New Task</label>
      <input id="description" name="description" type="text">
      <p>
        {% for category in categories %}
          {{ category.getName }}<input type="checkbox" name="category_id" value="{{ category.getId }}"><br/>
        {% endfor %}
      </p>
    </form>
    <p><a href='/'>Home</a></p>
</body>
</html>
